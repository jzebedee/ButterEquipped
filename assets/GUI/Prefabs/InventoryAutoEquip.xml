<Prefab>
	<Constants>
		<Constant Name="LeftPanel.Width" BrushLayer="Default" BrushName="Inventory.Tuple.Left" BrushValueType="Width" />
		<Constant Name="RightPanel.Width" BrushLayer="Default" BrushName="Inventory.Tuple.Right" BrushValueType="Width" />

		<Constant Name="ArmorEquipmentSlots.MarginTop" Value="205" />
		<Constant Name="WeaponEquipmentSlots.MarginTop" Value="205" />
		<Constant Name="EquipButtons.MarginTop" Value="75" />

		<Constant Name="LeftSlots.MarginLeft" Value="!LeftPanel.Width" Additive="35" />
		<Constant Name="RightSlots.MarginRight" Value="!RightPanel.Width" Additive="35" />
	</Constants>
	<Window>
		<Widget DoNotAcceptEvents="true" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent">
			<Children>
				<Widget Id="ArmorEquipmentSlots" DoNotAcceptEvents="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" MarginLeft="!LeftSlots.MarginLeft" MarginTop="!ArmorEquipmentSlots.MarginTop">
					<Children>
						<ButtonWidget Id="LockHelmet" Brush="Inventory.Lock" IsSelected="@HelmetLocked" ButtonType="Toggle" MarginTop="40" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Left" VerticalAlignment="Top" />

						<ButtonWidget Id="LockCloak" Brush="Inventory.Lock" IsSelected="@CloakLocked" ButtonType="Toggle" MarginTop="125" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Left" VerticalAlignment="Top" />

						<ButtonWidget Id="LockArmor" Brush="Inventory.Lock" IsSelected="@ArmorLocked" ButtonType="Toggle" MarginTop="210" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Left" VerticalAlignment="Top" />

						<ButtonWidget Id="LockGlove" Brush="Inventory.Lock" IsSelected="@GloveLocked" ButtonType="Toggle" MarginTop="295" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Left" VerticalAlignment="Top" />

						<ButtonWidget Id="LockBoot" Brush="Inventory.Lock" IsSelected="@BootLocked" ButtonType="Toggle" MarginTop="380" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Left" VerticalAlignment="Top" />

						<ButtonWidget Id="LockMount" Brush="Inventory.Lock" IsSelected="@MountLocked" ButtonType="Toggle" MarginTop="500" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Left" VerticalAlignment="Top" />

						<ButtonWidget Id="LockMountArmor" Brush="Inventory.Lock" IsSelected="@MountArmorLocked" ButtonType="Toggle" MarginTop="585" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Left" VerticalAlignment="Top" />
					</Children>
				</Widget>

				<Widget Id="WeaponEquipmentSlots" DoNotAcceptEvents="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Right" MarginRight="!RightSlots.MarginRight" MarginTop="!WeaponEquipmentSlots.MarginTop">
					<Children>
						<ButtonWidget Id="LockWeapon0" Brush="Inventory.Lock" IsSelected="@Weapon0Locked" ButtonType="Toggle" MarginTop="75" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Right" VerticalAlignment="Top" />

						<ButtonWidget Id="LockWeapon1" Brush="Inventory.Lock" IsSelected="@Weapon1Locked" ButtonType="Toggle" MarginTop="160" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Right" VerticalAlignment="Top" />

						<ButtonWidget Id="LockWeapon2" Brush="Inventory.Lock" IsSelected="@Weapon2Locked" ButtonType="Toggle" MarginTop="245" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Right" VerticalAlignment="Top" />

						<ButtonWidget Id="LockWeapon3" Brush="Inventory.Lock" IsSelected="@Weapon3Locked" ButtonType="Toggle" MarginTop="330" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="20" HorizontalAlignment="Right" VerticalAlignment="Top" />
					</Children>
				</Widget>

				<Widget Id="EquipButtonsContainer" DoNotAcceptEvents="true" WidthSizePolicy="CoverChildren" HeightSizePolicy="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Top" MarginTop="!EquipButtons.MarginTop">
					<Children>
						<ButtonWidget DoNotPassEventsToChildren="true" Command.Click="ExecuteEquip" IsVisible="@IsEquipVisible" MarginLeft="480" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="120" SuggestedHeight="60" Brush="ButtonGreenBrush">
							<Children>
								<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Center" VerticalAlignment="Center">
									<Children>
										<TextWidget Brush="Popup.Button.Text" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Text="Equip" />
									</Children>
								</Widget>
							</Children>
						</ButtonWidget>

						<ButtonWidget DoNotPassEventsToChildren="true" Command.Click="ExecuteEquipParty" IsVisible="@IsEquipPartyVisible" MarginLeft="480" MarginTop="45" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="120" SuggestedHeight="60" Brush="ButtonGoldBrush">
							<Children>
								<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" HorizontalAlignment="Center" VerticalAlignment="Center">
									<Children>
										<TextWidget Brush="Popup.Button.Text" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" Text="Party" />
									</Children>
								</Widget>
							</Children>
						</ButtonWidget>
					</Children>
				</Widget>
			</Children>
		</Widget>
	</Window>
</Prefab>